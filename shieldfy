#!/usr/bin/env php

<?php

foreach (array(__DIR__ . '/../../autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/vendor/autoload.php') as $file) {
    if (file_exists($file)) {
        define('COMPOSER_INSTALL', $file);
        break;
    }
}

unset($file);

require COMPOSER_INSTALL;

use Shieldfy\Queue\ShieldfyJob;

$arg = $argv[1];

// worker
if ($arg == 'worker') {
    echo "\e[0;32mğŸ‘· Worker run...\e[0m".PHP_EOL;
    (new ShieldfyJob())->run();
}
